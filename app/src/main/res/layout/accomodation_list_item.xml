<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#EFDDFD"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:id="@+id/my_container_accomodation">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:weightSum="1"
                android:layout_marginTop="8dp"
                android:background="#fff"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/accomo_image"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/item_back"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/Name_accomodation"
                    android:layout_toRightOf="@+id/accomo_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accomodation Name Here"
                    android:layout_weight="0.5"
                    android:textColor="#000"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/country_accomodation"
                    android:layout_toRightOf="@+id/accomo_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pakistan"
                    android:layout_below="@+id/Name_accomodation"
                    android:layout_weight="0.25"
                    android:textColor="#8C8B8B"
                    android:textSize="14dp"/>


                <TextView
                    android:id="@+id/type_accomodation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/accomo_image"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/country_accomodation"
                    android:text="Apartment"
                    android:layout_weight="0.25"
                    android:textColor="#8C8B8B"
                    android:textSize="12dp"/>


            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>